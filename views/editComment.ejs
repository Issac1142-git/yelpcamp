<%- include('header') %>

<div class="container">
    <h1 class="text-center">Edit Comment</h1>
    <div style="margin: 25px auto; width: 30%;">
    
        <form action="/campgrounds/<%= campground_id %>/comments/<%= comment._id %>?_method=PUT" method="POST">
        
            <div class="form-group">
                <input type="text" value="<%= comment.text %>" name="comment[text]" class="form-control">
            </div>
            
            <div class="form-group">
                <button class="btn btn-primary btn-block">Update</button>
            </div>
        </form>
    <a href="/campgrounds/<%= campground_id %>/comments/edit">Go Back</a>
</div>
</div>


<%- include('footer') %>