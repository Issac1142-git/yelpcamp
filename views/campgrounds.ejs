<%- include('header') %>

<div class="container">
    <header class="jumbotron">
        <div class="container">
            <h1>Welcome to YelpCamp</h1>
            <p>View our Hand-Picked Campgrounds from all over the World</p>
            <a href="/campgrounds/new" class="btn btn-lg btn-primary">Add new Campgrounds</a>
        </div>
        
    </header>
    
    <div class="row text-center">
        
            <% campgrounds.forEach(function(campground){ %>
                <div class="col-md-3 col-sm-6" >
                    <div class="card">
                        <img src="<%= campground.image %>" alt=""> 
                        <div class="card-body">
                            
                            <h4 class="card-title"><%= campground.name %></h4> 
                            <a href="/campgrounds/<%= campground._id %>" class="btn btn-primary"> More</a>
                        </div>
                        
                    </div>
                </div>
               
               
                
            <% }) %>
        </div>
    
    </div>
        
</div>

<%- include('footer') %>