<%- include('header') %>

<div class="container">
    <h1 class="text-center">Create a new Campgrounds</h1>
    <div style="margin: 25px auto; width: 30%;">
    <form action="/campgrounds" method="POST">
        
            <div class="form-group">
                <input type="text" placeholder="Enter Name" name="name" class="form-control">
            </div>
            <div class="form-group">
                <input type="number" name="price" placeholder="Enter Price" class="form-control" min="1" step="1" id="">
            </div>

            <div class="form-group">
                <input type="text" placeholder="image url" name="image" class="form-control"> 
            </div>
            <div class="form-group">
                <input type="text" placeholder="description" name="description" class="form-control"> 
            </div>
            <div class="form-group">
                <button class="btn btn-primary btn-block">Add Now!</button>
            </div>
        
        

    
    
    </form>
    <a href="/campgrounds">Go Back</a>
</div>
</div>


<%- include('footer') %>