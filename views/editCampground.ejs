<%- include('header') %>

<div class="container">
    <h1 class="text-center">Edit <%= campground.name %></h1>
    <div style="margin: 25px auto; width: 30%;">
    <form action="/campgrounds/<%= campground._id %>?_method=PUT" method="POST">
        
            <div class="form-group">
                <input type="text" value="<%= campground.name %>" name="name" class="form-control">
            </div>
            <div class="form-group">
                <input type="number" name="price" value="<%= campground.price %>" class="form-control" min="1" step="1" id="">
            </div>

            <div class="form-group">
                <input type="text" value="<%= campground.image %>" name="image" class="form-control"> 
            </div>
            <div class="form-group">
                <input type="text" value="<%= campground.description %>" name="description" class="form-control"> 
            </div>
            <div class="form-group">
                <button class="btn btn-primary btn-block">Update!</button>
            </div>
        
        

    
    
    </form>
    <a href="/campgrounds">Go Back</a>
</div>
</div>


<%- include('footer') %>